        {
          "dataset": "LOOTS",
          "datasource": {
            "type": "grafana-postgresql-datasource",
            "uid": "P7D58F15E2B4BC203"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "WITH daily_soc AS (\n    SELECT\n        DATE_TRUNC('day', updated) AS day,\n        MIN(soc) AS minsoc,\n        MAX(soc) AS maxsoc\n    FROM public.loots_inverter\n    WHERE $__timeFilter(updated)\n    GROUP BY 1\n),\nmonthly AS (\n    SELECT\n        DATE_TRUNC('month', li.updated) AS month,\n        SUM(EXTRACT(EPOCH FROM (li.updated -\n               (SELECT MAX(li2.updated)\n                FROM public.loots_inverter li2\n                WHERE li2.updated < li.updated))) / 3600 * li.production_power) AS production_units,\n        SUM(EXTRACT(EPOCH FROM (li.updated -\n               (SELECT MAX(li2.updated)\n                FROM public.loots_inverter li2\n                WHERE li2.updated < li.updated))) / 3600 * li.purchase_power)   AS purchased_units\n    FROM public.loots_inverter li\n    WHERE $__timeFilter(updated)\n    GROUP BY 1\n)\nSELECT\n    m.month               AS time,\n    AVG(ds.minsoc)        AS avg_minsoc,\n    AVG(ds.maxsoc)        AS avg_maxsoc,\n    m.production_units,\n    m.purchased_units\nFROM monthly m\nJOIN daily_soc ds\n  ON ds.day >= m.month\n AND ds.day <  m.month + INTERVAL '1 month'\nGROUP BY m.month, m.production_units, m.purchased_units\nORDER BY time;",
          "refId": "A",
          "sql": {
